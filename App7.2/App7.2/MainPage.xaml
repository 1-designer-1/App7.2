<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App7._2.MainPage">

    <StackLayout>
        <Label Text="Напоминалка" TextColor="Black" FontSize="30" HorizontalOptions="CenterAndExpand"/>
        <Label Text="Дата" TextColor="Black" FontSize="20" HorizontalOptions="CenterAndExpand"/>
        <DatePicker x:Name="dataPic" Format="dd.MM.yyyy" HorizontalOptions="CenterAndExpand" FontSize="20"/>
        <Label Text="Время" TextColor="Black" FontSize="20" HorizontalOptions="CenterAndExpand"/>
        <TimePicker x:Name="time" Format="HH:mm" FontSize="20" HorizontalOptions="CenterAndExpand"/>
        <Label Text="Сообщение" TextColor="Black" FontSize="20" HorizontalOptions="CenterAndExpand"/>
        <Entry x:Name="ent_M"  FontSize="20"/>
        <Button x:Name="bth_s" Text="Установить" Clicked="bth_s_Clicked" HorizontalOptions="CenterAndExpand" />
        <Button x:Name="bth_sp" Text="Сброс" Clicked="bth_sp_Clicked" HorizontalOptions="CenterAndExpand" />





    </StackLayout>

</ContentPage>
